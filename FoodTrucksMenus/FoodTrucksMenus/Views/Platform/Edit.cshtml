@model FoodTrucksMenus.Models.AddorEditPlatformViewModel

@{
    ViewData["Title"] = "Crear";
}
<h4>Crear Platforma</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IconLogo" class="control-label"></label>
                <input asp-for="IconLogo" class="form-control" type="file" />
                <span asp-validation-for="IconLogo" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Edit" class="btn btn-outline-secondary" />
                <a asp-action="Index" class="btn btn-outline-secondary">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>

<div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

@model FoodTrucksMenus.Data.Entities.Platform

@{
    ViewData["Title"] = "Crear";
}
<h4>Crear Platforma</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IconLogo" class="control-label"></label>
                <input asp-for="IconLogo" class="form-control" type="file"/>
                <span asp-validation-for="IconLogo" class="text-danger"></span>
            </div>
             <div class="form-group mt-2">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-warning">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>

<div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

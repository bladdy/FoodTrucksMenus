@model FoodTrucksMenus.Models.CreateProductViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Crear Producto</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Categories" />
            <input type="hidden" asp-for="Menus" />
            <partial name="_CreateProduct" />
            <hr />
            <div class="form-group mt-2">
                <input type="submit" value="Crear" class="btn btn-outline-secondary" />
                <a asp-action="Index" class="btn btn-outline-secondary">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
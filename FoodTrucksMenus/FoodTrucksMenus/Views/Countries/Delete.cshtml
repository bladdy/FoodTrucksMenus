@model FoodTrucksMenus.Data.Entities.Country

@{
    ViewData["Title"] = "Delete";
}
<div class="container mt-5">
    <h1>Borrar</h1>

    <h3>¿Esta seguro de que querer borrar esto?</h3>
    <div>
        
        <partial name= "_CountryDetails" />
        <br/>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Borrar" class="btn btn-outline-danger" /> 
            <a asp-action="Index" class="btn btn-outline-warning">Volver a la lista</a>
        </form>
    </div>
</div>

@model FoodTrucksMenus.Data.Entities.City

@{
    ViewData["Title"] = "Delete";
}
<div class="container mt-5">
    <h1>Borrar</h1>

    <h3>Esta seguro de borrar este Registro?</h3>
    <div>

        <partial name="_CityDetails" />
        <form asp-action="DeleteCity">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-outline-danger" />
            <a asp-action="DetailsStates" asp-route-id="@Model?.State.Id" class="btn btn-outline-info">Regresar</a>
        </form>
    </div>
</div>
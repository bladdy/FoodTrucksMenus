@model FoodTrucksMenus.Data.Entities.Category

@{
    ViewData["Title"] = "Delete";
}

<h1>Borrar</h1>

<h3>Esta seguro de borrar esta Categoria?</h3>
<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-4">
            @Html.DisplayNameFor(model => model.NameCat)
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.NameCat)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Borrar" class="btn btn-outline-secondary" /> 
         <a asp-action="Index" class="btn btn-outline-secondary">Volver a la lista</a>
    </form>
</div>

@model FoodTrucksMenus.Models.AddTruckPlatformsViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Truck / Plataforma</h4>
<hr />
<div class="row">
    <div class="col-md-12">

        <form asp-action="AddPlatforms" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TruckId" />
            <input type="hidden" asp-for="Platforms" />
            <div class="form-group">
                <label asp-for="PlatformsId" class="control-label"></label>
                <select asp-for="PlatformsId" asp-items="Model.Platforms" class="form-control"></select>
                <span asp-validation-for="PlatformsId" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Agregar" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-success">Regresar</a>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}

